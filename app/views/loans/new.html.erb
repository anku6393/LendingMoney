<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 col-lg-6 mx-auto">
      <div class="card shadow-lg border-0 p-4">
        <h2 class="text-center mb-4">Request a New Loan</h2>

        <%= form_with model: @loan, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :amount, 'Loan Amount', class: 'form-label' %>
            <%= f.text_field :amount, required: true, class: 'form-control', pattern: '\d+(\.\d{1,2})?' , title: 'This feild accepts only numbers' %>
          </div>

          <div class="mb-3">
            <%= f.label :interest_rate, 'Interest Rate (%)', class: 'form-label' %>
            <%= f.text_field :interest_rate, required: true, class: 'form-control', pattern: '\d+(\.\d{1,2})?' , title: 'This feild accepts only numbers' %>
          </div>

          <div class="text-center">
            <%= f.submit 'Request Loan', class: 'btn btn-success w-100' %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= link_to 'Back to Dashboard', dashboard_path, class: 'btn btn-secondary w-100' %>
        </div>
      </div>
    </div>
  </div>
</div>
